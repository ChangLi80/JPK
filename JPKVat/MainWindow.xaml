<Window x:Class="JPKVat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JPKVat"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:JPKVat.Models"
        Title="JPK VAT" Height="350" Width="525">
    <Window.Resources>
        <vm:JPKViewModel x:Key="myview"/>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource myview}}" Margin="0,0,0,0">
        <Button x:Name="button" Content="Connect To Informix" HorizontalAlignment="Left" Margin="33,42,0,0" VerticalAlignment="Top" Width="133" Command="{Binding ConnectCommand}" CommandParameter="{Binding ConnectionString}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="19" Margin="33,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="463" Text="{Binding ConnectionString}"/>
        <TextBlock  Margin="184,42,21,257" Text="{Binding IFXMessage,Mode=TwoWay}" />
    </Grid>
</Window>
